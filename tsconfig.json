{
  "compilerOptions": {
    /* Emit */
    "noEmit": true,

    /* Interop Constraints */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    /* Language and Environment */
    "target": "esnext",

    /* Modules */
    "module": "esnext",

    /* Completeness */
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "resolveJsonModule": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["**/*"],
  "exclude": ["./dist/**/*"]
}
